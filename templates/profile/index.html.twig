{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block body %}
    <div class="profil">
        <div class="prof">
            <ul>
                <div class="ava">
                    <li class="imagep">
                    {% if app.user.avatar %}
                        <a href="{{ path('app_profile') }}"><img id="avatar" src="{{ asset('images/avatar/' ~ app.user.avatar) }}" alt="avatar" class="imgprofile" aria-expanded="false"></a>
                    {% else %}
                        <img class="imgprofile" src="{{ asset('images/avatar.png') }}" alt="avatar" aria-expanded="false">
                    {% endif %}
                    </li>
                </div>
                <div class="user">
                    <li>Nom : {{ app.user.name }}</li>
                    <li>Pr√©nom : {{ app.user.lastname }}</li>
                    <li>Email : {{ app.user.email }}</li>
                    <li>Date de naissance : {{ app.user.birthAt|date('j-m-Y') }}</li>
                </div>
            </ul>
            
        <div class="changeprofile">
            <a class="btn btn-success" href="{{ path('app_profile_edit', {id: app.user.id}) }}">Modifier Profil</a>
        </div>
        </div>
    </div>
{% endblock %}
