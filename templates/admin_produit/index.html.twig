{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix(â‚¬)</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>
                {% if produit.image %}
                    <img src="{{ asset('images/produit/' ~ produit.image) }}" alt="" class="img300">
                {% else %}
                    pas d'images
                {% endif %}
                </td> 
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_produit_show', {'id': produit.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_admin_produit_new') }}">Ajouter un Produit</a>
{% endblock %}
