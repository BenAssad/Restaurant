{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
        </tbody>
    </table>
    <div class="maybt">
        <a class="btn" href="{{ path('app_admin_produit_index') }}">Voir les Produits</a>

        <a class="btn" href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">Modifier</a>

        <p>{{ include('admin_produit/_delete_form.html.twig') }}</p>
    </div>
{% endblock %}
