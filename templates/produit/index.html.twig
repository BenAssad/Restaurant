{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1></h1>

    <div class="">
        {% for produit in produits %}
            {{ produit.titre }}
            {{ produit.description }}
            {{ produit.prix }}
            {% if produit.image %}
                <img src="{{ asset(  'images/produit/' ~ produit.image    ) }}" alt="" class="img80">
            {% else %}
                
            {% endif %}
        {% endfor %}
    </div>
</div>
{% endblock %}
