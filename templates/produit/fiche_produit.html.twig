{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/menu.css') }}">
{% endblock %}

{% block body %}

    <div id="gridmenu">

            <div id="grid">
              
                    <div class="grid1">
                        <div class="ig">
                            {% if produits.image %} 
                                <img src="{{ asset(  'images/produit/' ~ produits.image    ) }}"  class="itemImg">
                            {% else %}
                                <img src="{{ asset(  'images/home.jpg'   ) }}" class="itemImg">
                            {% endif %}
                        </div>
                        <div class="grig2">
                            <div class="">
                                <h2>{{ produits.titre }}</h2>
                                <p>{{ produits.description }}</p>
                                <p>
                                    {% if produits.categorie %}
                                        {{ produits.categorie.name }}
                                    {% else %}
                                        N.A
                                    {% endif %}
                                </p>
                            </div>
                            <div class="pan">
                                <p>$ {{ produits.prix }}</p>
                                <div class="cart">
                                    <a href="{{path("app_add_to_cart", {'id' : produits.id })}}"><i data-feather="shopping-cart"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                
            </div>
        </div>
    </div>

{% block javascripts %}
    <script src="{{ asset('js/menu.js') }}"></script>
{% endblock %}

    
{% endblock %}
